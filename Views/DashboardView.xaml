<UserControl x:Class="WpfApp1.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WpfApp1.Models"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Task Dashboard" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding CurrentUser.Username, StringFormat='Welcome, {0}'}" 
                       FontSize="16" Margin="20,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
            <TextBlock Text="{Binding CurrentUser.Role, StringFormat='({0})'}" 
                       FontSize="14" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Blue"/>
            <Button Content="Logout" Command="{Binding LogoutCommand}" 
                    Style="{StaticResource ButtonStyle}" Margin="20,0,0,0" 
                    HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Filters Panel -->
        <Border Grid.Row="1" Grid.Column="0" Background="#F5F5F5" CornerRadius="4" Padding="12" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Filters" Style="{StaticResource HeaderTextStyle}"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ComboBox x:Name="PriorityFilter" Width="120" Margin="0,0,8,0" 
                              SelectedValue="{Binding FilterPriority}" SelectedValuePath="Tag">
                        <ComboBoxItem Content="All Priorities" Tag="{x:Null}"/>
                        <ComboBoxItem Content="Low" Tag="{x:Static local:Priority.Low}"/>
                        <ComboBoxItem Content="Medium" Tag="{x:Static local:Priority.Medium}"/>
                        <ComboBoxItem Content="High" Tag="{x:Static local:Priority.High}"/>
                        <ComboBoxItem Content="Critical" Tag="{x:Static local:Priority.Critical}"/>
                    </ComboBox>
                    
                    <ComboBox x:Name="StatusFilter" Width="120" Margin="0,0,8,0"
                              SelectedValue="{Binding FilterStatus}" SelectedValuePath="Tag">
                        <ComboBoxItem Content="All Status" Tag="{x:Null}"/>
                        <ComboBoxItem Content="New" Tag="{x:Static local:TaskStatus.New}"/>
                        <ComboBoxItem Content="In Progress" Tag="{x:Static local:TaskStatus.InProgress}"/>
                        <ComboBoxItem Content="Blocked" Tag="{x:Static local:TaskStatus.Blocked}"/>
                        <ComboBoxItem Content="Completed" Tag="{x:Static local:TaskStatus.Completed}"/>
                    </ComboBox>
                </StackPanel>
                
                <Button Content="Apply Filters" Command="{Binding LoadTasksCommand}" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Task List -->
        <Border Grid.Row="2" Grid.Column="0" Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Tasks" Style="{StaticResource HeaderTextStyle}"/>
                    <Button Content="Refresh" Command="{Binding LoadTasksCommand}" 
                            Style="{StaticResource ButtonStyle}" Margin="8,0,0,0"/>
                    <Button Content="New Task" Command="{Binding CreateTaskCommand}" 
                            Style="{StaticResource ButtonStyle}" Margin="8,0,0,0"/>
                </StackPanel>
                
                <ListView Grid.Row="1" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Priority" Width="80" DisplayMemberBinding="{Binding Priority}"/>
                            <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                            <GridViewColumn Header="Assigned To" Width="120" DisplayMemberBinding="{Binding AssignedUser.Username}"/>
                            <GridViewColumn Header="Due Date" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DueAtUtc, StringFormat={}{0:MM/dd/yyyy}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Task Details Panel -->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Background="White" CornerRadius="4" Padding="12">
    <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Task Details" Style="{StaticResource HeaderTextStyle}"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel DataContext="{Binding SelectedTask}">
                        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
                            <TextBlock Text="Title:" FontWeight="Medium"/>
                            <TextBox Text="{Binding Title}" Margin="0,2,0,8"/>
                            
                            <TextBlock Text="Description:" FontWeight="Medium"/>
                            <TextBox Text="{Binding Description}" TextWrapping="Wrap" AcceptsReturn="True" 
                                     Height="60" Margin="0,2,0,8"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                                    <TextBlock Text="Priority:" FontWeight="Medium"/>
                                    <ComboBox SelectedItem="{Binding Priority}" Width="100" Margin="0,2,0,0">
                                        <ComboBoxItem Content="Low" Tag="{x:Static local:Priority.Low}"/>
                                        <ComboBoxItem Content="Medium" Tag="{x:Static local:Priority.Medium}"/>
                                        <ComboBoxItem Content="High" Tag="{x:Static local:Priority.High}"/>
                                        <ComboBoxItem Content="Critical" Tag="{x:Static local:Priority.Critical}"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Status:" FontWeight="Medium"/>
                                    <ComboBox SelectedItem="{Binding Status}" Width="120" Margin="0,2,0,0">
                                        <ComboBoxItem Content="New" Tag="{x:Static local:TaskStatus.New}"/>
                                        <ComboBoxItem Content="In Progress" Tag="{x:Static local:TaskStatus.InProgress}"/>
                                        <ComboBoxItem Content="Blocked" Tag="{x:Static local:TaskStatus.Blocked}"/>
                                        <ComboBoxItem Content="Completed" Tag="{x:Static local:TaskStatus.Completed}"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBlock Text="Due Date:" FontWeight="Medium"/>
                            <DatePicker SelectedDate="{Binding DueAtUtc}" Margin="0,2,0,8"/>
                        </StackPanel>
                        
                        <!-- Comments Section -->
                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Comments" FontWeight="Medium" Margin="0,0,0,8"/>
                            <ListView ItemsSource="{Binding Comments}" Height="120">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,2">
                                            <TextBlock FontWeight="Medium" Text="{Binding Author.Username}"/>
                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding CreatedAtUtc, StringFormat={}{0:MM/dd/yyyy HH:mm}}" 
                                                       FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBox x:Name="NewCommentTextBox" Width="200" Margin="0,0,8,0"/>
                                <Button Content="Add Comment" Click="AddComment_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="Save" Command="{Binding SaveTaskCommand}" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Delete" Command="{Binding DeleteTaskCommand}" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>


