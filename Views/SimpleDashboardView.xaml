<UserControl x:Class="WpfApp1.Views.SimpleDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Task Management Dashboard" FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,32"/>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="24">
            <StackPanel>
                <TextBlock Text="{Binding CurrentUser.Username}" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="{Binding CurrentUser.Role}" FontSize="18" 
                           HorizontalAlignment="Center" Margin="0,0,0,32"/>
                
                <TextBlock Text="Welcome to the Task Management System!" FontSize="16" 
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Database functionality will be restored once the basic login is working." FontSize="14" 
                           HorizontalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
